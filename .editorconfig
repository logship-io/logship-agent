root = true
file_header_template = // <copyright file="{fileName}.cs" company="Logship LLC">\n// Copyright Â© Logship LLC. All rights reserved.\n// </copyright>

[*]
end_of_line = lf

[*.cs]
charset = utf-8
csharp_prefer_braces = always:error

# This call site is calling into a function with a 'params' parameter. This results in an array allocation	Logship.Service
dotnet_diagnostic.HAA0101.severity = suggestion
dotnet_analyzer_diagnostic.HAA0101.severity = suggestion
# Non-ValueType enumerator may result in a heap allocation
dotnet_diagnostic.HAA0301.severity = suggestion
dotnet_analyzer_diagnostic.HAA0301.severity = suggestion
# Non-ValueType enumerator may result in a heap allocation
dotnet_diagnostic.HAA0401.severity = suggestion
dotnet_analyzer_diagnostic.HAA0401.severity = suggestion
# Value type to reference type conversion causes boxing at call site (here), and unboxing at the callee-site. Consider using generics if applicable	
dotnet_diagnostic.HAA0601.severity = suggestion
dotnet_analyzer_diagnostic.HAA0601.severity = suggestion

# CS3021: Type or member does not need a CLSCompliant attribute because the assembly does not have a CLSCompliant attribute
dotnet_diagnostic.CS3021.severity = silent

# CS8981: Lowercase ascii characters may become reserved for the language.
dotnet_diagnostic.CS8981.severity = silent

# CA1000: Do not declare static members on generic types
dotnet_diagnostic.CA1000.severity = silent
# CA1001: Types that own disposable fields should be disposable
dotnet_diagnostic.CA1001.severity = suggestion
# CA1051: Do not declare visible instance fields
dotnet_diagnostic.CA1051.severity = none
# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = none
# CA1805: Do not initialize unnecessarily
dotnet_diagnostic.CA1805.severity = silent
# CA1711: Identifiers should not have incorrect suffix
dotnet_diagnostic.CA1711.severity = none
# CA1715: Identifiers should have correct prefix
dotnet_diagnostic.CA1715.severity = none
# CA1716: Identifiers should not match keywords
dotnet_diagnostic.CA1716.severity = none
# CA1727: Use PascalCase for named placeholders
dotnet_diagnostic.CA1727.severity = suggestion
# CA1720: Identifiers should not contain type names
dotnet_diagnostic.CA1720.severity = none
# CA1816: Call GC.SuppressFinalize correctly
dotnet_diagnostic.CA1816.severity = silent
# CA1826: Use property instead of Linq Enumerable method
dotnet_diagnostic.CA1826.severity = suggestion
# CA1839: Avoid const arrays
dotnet_diagnostic.CA1839.severity = silent
# CA1848: Use the LoggerMessage delegates
dotnet_diagnostic.CA1848.severity = suggestion
# CA1859: Use concrete types when possible for improved performance
dotnet_diagnostic.CA1859.severity = suggestion
# CA1861: Avoid constant arrays as arguments
dotnet_diagnostic.CA1861.severity = silent
# CA2201: Do not raise reserved exception types
dotnet_diagnostic.CA2201.severity = silent
# CA2208: Instantiate argument exceptions correctly
dotnet_diagnostic.CA2208.severity = silent

# IDE0007
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = true

# IDE0100: Remove redundant equality
dotnet_diagnostic.IDE0100.severity = none

# IDE0046: Convert to conditional expression
dotnet_style_prefer_conditional_expression_over_return = false

# IDE0090: Use 'new(...)'
csharp_style_implicit_object_creation_when_type_is_apparent = false

# IDE0300: Simplify collection initialization
dotnet_diagnostic.IDE0300.severity = none
# IDE0301: Simplify collection initialization
dotnet_diagnostic.IDE0301.severity = suggestion
# IDE0305: Simplify collection initialization
dotnet_diagnostic.IDE0305.severity = suggestion

# IDE0078: Use pattern matching
dotnet_diagnostic.IDE0078.severity = suggestion

# IDE0290: Use primary constructor
dotnet_diagnostic.IDE0290.severity = none

# IDE0028: Simplify collection initialization
dotnet_diagnostic.IDE0028.severity = suggestion

# IDE0057: Use range operator
dotnet_diagnostic.IDE0057.severity = suggestion
csharp_style_prefer_range_operator = false

# IDE0063: Use simple 'using' statement (IDE0063)
dotnet_diagnostic.IDE0063.severity = none

# IDE0065: Misplaced using directive
csharp_using_directive_placement = inside_namespace

# IDE0017: Simplify object initialization
dotnet_diagnostic.IDE0017.severity = suggestion